<h2>Lista de posts: </h2>
<hr>
<a href="/admin/postagens/add">
<button class="btn btn-success">Nova postagem</button>
</a>

{{#each postagens}}
<div class="card mt-4">
<div class="card-body">
    <h4>{{titulo}}</h4>
    <p>Descrição: {{descricao}}</p><br>
    <small>Data: {{data}}</small><br>
    <small>Categoria: {{categoria.nome}}</small><br>
    <a href="/admin/postagens/edit/{{_id}}"><button class="mt-2 btn btn-success">Editar postagem</button></a>
    <a href="/admin/postagens/delete/{{_id}}"><button class="mt-2 btn btn-danger">Deletar postagem</button></a>
</div>
</div>
{{else}}
<div class="card mt-4">
    <div class="card-body">
        <h4>Não há postagens</h4>
    </div>
</div>
{{/each}}